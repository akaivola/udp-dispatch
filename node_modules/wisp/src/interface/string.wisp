(ns wisp.interface.string
  (:refer [wisp.interface.protocol :refer [satisfies?]]))

(defprotocol IString
  (subs [string start end])
  (split [string pattern limit])
  (split-lines [string])
  (join [separator collection])
  (upper-case [string])
  (lower-case [string])
  (capitalize [string])
  (replace-first [string match replacement])
  (replace [string match replacement])
  (triml [string])
  (trimr [string])
  (trim [string])
  (blank? [string]))

(defn string?
  [x]
  (satisfies? IString x))
